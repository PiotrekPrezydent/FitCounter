<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF1F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Training Knowledge Base"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#263238"
            android:layout_marginBottom="24dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perfect Push-up Form"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#E53935"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Place your hands shoulder-width apart.\n2. Keep your body in a straight line from head to heels (Plank position).\n3. Lower your chest until it nearly touches the floor (or phone).\n4. Push back up to the starting position."
                    android:textColor="#455A64"
                    android:lineSpacingExtra="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Target Muscles: Pectorals, Deltoids, Triceps, Core."
                    android:textStyle="italic"
                    android:textColor="#78909C"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Squat Technique Guide"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1E88E5"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Stand with feet slightly wider than your hips.\n2. Keep your chest up and back straight.\n3. Initiate the movement by sending your hips back as if sitting in a chair.\n4. Go down until thighs are parallel to the floor.\n5. Drive through your heels to stand up."
                    android:textColor="#455A64"
                    android:lineSpacingExtra="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Target Muscles: Quadriceps, Hamstrings, Glutes."
                    android:textStyle="italic"
                    android:textColor="#78909C"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Benefits of Walking"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#00ACC1"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Walking 10,000 steps a day can significantly improve your cardiovascular health. It is a low-impact exercise suitable for all fitness levels. Regular walking helps maintain a healthy weight and strengthens bones."
                    android:textColor="#455A64"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Understanding BMI"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#8E24AA"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Body Mass Index (BMI) is a screening tool that can indicate whether a person is underweight or has a healthy weight, excess weight, or obesity. It is not a diagnostic tool but a useful general indicator."
                    android:textColor="#455A64"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>