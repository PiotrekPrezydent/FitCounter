<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF1F5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnAccept">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FitHeroRPG Manual"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#263238"
                android:layout_marginBottom="24dp"/>

            <!-- Game Mechanics Intro -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="How to Play"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FF9800"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Turn your sweat into power! Select your weapon (exercise) and click 'FIGHT MONSTER' to start.\n\nHP: Monster's life. Reduce to 0 to win.\nXP: Experience points from reps. Level up for more power.\nGold: Currency to buy items."
                        android:textColor="#455A64"
                        android:lineSpacingExtra="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Combat Mechanics -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Combat Styles"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#D32F2F"
                        android:layout_marginBottom="12dp"/>

                    <!-- Pushups -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1. Push-ups (+5 DMG)"
                        android:textStyle="bold"
                        android:textColor="#E53935"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Use the Proximity Sensor. Place your phone on the floor directly under your chest. Lower yourself until your chest nearly touches the screen to count a rep."
                        android:textColor="#455A64"
                        android:layout_marginBottom="12dp"
                        android:lineSpacingExtra="2dp"/>

                    <!-- Squats -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2. Squats (+7 DMG)"
                        android:textStyle="bold"
                        android:textColor="#1E88E5"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Use the Accelerometer. Hold the phone in your hand or secure pocket. Stand straight, then squat down until thighs are parallel to floor, then stand up."
                        android:textColor="#455A64"
                        android:layout_marginBottom="12dp"
                        android:lineSpacingExtra="2dp"/>

                    <!-- Steps -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3. Walking (+1 DMG)"
                        android:textStyle="bold"
                        android:textColor="#00ACC1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Use the Step Counter. Best for outdoor walks. Keep phone in pocket. Walk normally to damage the monster slowly but steadily over time."
                        android:textColor="#455A64"
                        android:lineSpacingExtra="2dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Shop Info -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item Shop"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFC107"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Spend Gold to buy power-ups:\n\n• Strength Potion: Deal double damage for 1 hour.\n• Lucky Coin: Earn double Gold for 1 hour.\n• Grenade: Instantly deal 100 DMG to the current monster!"
                        android:textColor="#455A64"
                        android:lineSpacingExtra="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Terms of Service -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="80dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terms of Service"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#424242"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="By using MotionWarrior, you agree to the following:\n\n1. Safety: Consult a doctor before starting any exercise program. Stop immediately if you feel pain or dizziness.\n2. Privacy: This app processes sensor data locally on your device. We do not store or share your personal fitness data with third parties.\n3. Liability: The developers of MotionWarrior are not responsible for any injuries or damages resulting from the use of this app."
                        android:textColor="#616161"
                        android:textSize="12sp"
                        android:lineSpacingExtra="3dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnAccept"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:text="I Understand &amp; Accept"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#29B6F6"
        android:textColor="#FFFFFF"/>

</RelativeLayout>