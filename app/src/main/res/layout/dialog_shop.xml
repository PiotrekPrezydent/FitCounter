<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#212121">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ITEM SHOP"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFD700"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <!-- Item 1: Strength Potion -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">
        
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_shop_potion"
            android:layout_marginEnd="16dp"/>
            
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Strength Potion"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Double Damage (5 min)"
                android:textColor="#B0BEC5"
                android:textSize="12sp"/>
        </LinearLayout>
        
        <Button
            android:id="@+id/btnBuyPotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50 G"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <!-- Item 2: Lucky Coin -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">
        
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_shop_coin"
            android:layout_marginEnd="16dp"/>
            
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lucky Coin"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Double Gold (10 min)"
                android:textColor="#B0BEC5"
                android:textSize="12sp"/>
        </LinearLayout>
        
        <Button
            android:id="@+id/btnBuyCoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 G"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
    
    <!-- Item 3: Holy Grenade -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">
        
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_shop_grenade"
            android:layout_marginEnd="16dp"/>
            
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Holy Grenade"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deal 100 DMG Instantly"
                android:textColor="#B0BEC5"
                android:textSize="12sp"/>
        </LinearLayout>
        
        <Button
            android:id="@+id/btnBuyGrenade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200 G"
            android:backgroundTint="#D500F9"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnCloseShop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close Shop"
        android:backgroundTint="#424242"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"/>

</LinearLayout>
