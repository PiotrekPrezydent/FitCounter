<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".MainActivity">

    <!-- Header Stats -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardStats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#1F1F1F"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toStartOf="@+id/btnInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="LVL 1"
                    android:textColor="#76FF03"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvGold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="4dp"
                    android:text="0 G"
                    android:textColor="#FFD700"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:drawableStartCompat="@android:drawable/ic_menu_sort_by_size" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/pbExp"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="8dp"
                android:progress="50"
                android:progressDrawable="@drawable/custom_progress_exp" 
                android:progressTint="#76FF03" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/btnInfo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_help"
        android:tint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/cardStats"/>

    <ImageButton
        android:id="@+id/btnHealthGuide"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_agenda"
        android:tint="#FFC107"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnInfo"/>

    <!-- Monster Area -->
    <ImageView
        android:id="@+id/ivMonster"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        android:src="@android:drawable/ic_menu_my_calendar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardStats" />

    <TextView
        android:id="@+id/tvMonsterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Green Slime"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivMonster" />

    <ProgressBar
        android:id="@+id/pbHp"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="12dp"
        android:max="100"
        android:progress="80"
        android:progressTint="#D500F9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMonsterName" />

    <TextView
        android:id="@+id/tvHpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="80/100 HP"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/pbHp"
        app:layout_constraintEnd_toEndOf="@+id/pbHp"
        app:layout_constraintStart_toStartOf="@+id/pbHp"
        app:layout_constraintTop_toTopOf="@+id/pbHp" />

    <!-- Daily Challenge -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardDailyChallenge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        app:cardBackgroundColor="#2D2D2D"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pbHp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DAILY CHALLENGE"
                android:textColor="#FF9800"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDailyChallenge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Do 50 Squats for +100 Gold!"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Combat Log / Damage Text could go here, for now simpler -->
    
    <!-- Weapon Selector -->
    <LinearLayout
        android:id="@+id/llWeapons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/btnFight">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWeaponPush"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="PUSH (+5)"
            android:textColor="#FFFFFF"
            app:strokeColor="#76FF03" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWeaponSquat"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="SQUAT (+7)"
            android:textColor="#FFFFFF"
            app:strokeColor="#FFFFFF" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWeaponStep"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="WALK (+1)"
            android:textColor="#FFFFFF"
            app:strokeColor="#FFFFFF" />
    </LinearLayout>

    <!-- Main Action Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFight"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_margin="24dp"
        android:backgroundTint="#D500F9"
        android:text="FIGHT MONSTER"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="32dp"
        app:layout_constraintBottom_toTopOf="@+id/llFooter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
        
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose weapon to start..."
        android:textColor="#B0BEC5"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/llWeapons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Footer -->
    <LinearLayout
        android:id="@+id/llFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1F1F1F"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btnHistory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00000000"
            android:text="Battle Log"
            android:textColor="#B0BEC5" />

        <Button
            android:id="@+id/btnShop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00000000"
            android:text="Shop"
            android:textColor="#FFD700" />
            
        <Button
            android:id="@+id/btnSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00000000"
            android:text="Settings"
            android:textColor="#B0BEC5" />

    </LinearLayout>
            
    <TextView
        android:id="@+id/tvTotalDamage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dmg: 0"
        android:textColor="#757575"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/ivMonster"
        app:layout_constraintEnd_toEndOf="@+id/ivMonster"
        app:layout_constraintTop_toBottomOf="@+id/ivMonster"/>

</androidx.constraintlayout.widget.ConstraintLayout>